{
  "name": "tyc-backend",
  "version": "0.0.1",
  "description": "Node.js backend for thank you cookies",
  "main": "dist/app.js",
  "scripts": {
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch --passWithNoTests",
    "tsc:watch": "tsc --watch && nodemon",
    "tsc": "tsc",
    "coverage": "jest --coverage",
    "lint": "tslint --fix ./src/**.ts",
    "prettify": "prettier --write",
    "start": "concurrently --kill-others \"npm run tsc:watch\" nodemon"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "npm test",
      "npm run prettify",
      "npm run lint",
      "git add"
    ],
    "*.{scss,json,md,js,jsx,mdx,yml}": [
      "npm run prettify",
      "git add"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ThankUCookies/tyc-backend.git"
  },
  "keywords": [
    "node",
    "typescript"
  ],
  "author": "ameerthehacker",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ThankUCookies/tyc-backend/issues"
  },
  "homepage": "https://github.com/ThankUCookies/tyc-backend#readme",
  "devDependencies": {
    "@types/dotenv": "^6.1.0",
    "@types/express": "^4.16.0",
    "@types/jest": "^23.3.11",
    "@types/node": "^10.12.18",
    "concurrently": "^4.1.0",
    "dotenv": "^6.2.0",
    "husky": "^1.3.1",
    "jest": "^23.6.0",
    "lint-staged": "^8.1.0",
    "nodemon": "^1.18.9",
    "prettier": "^1.15.3",
    "ts-jest": "^23.10.5",
    "tslint": "^5.12.0",
    "typescript": "^3.2.2"
  },
  "dependencies": {
    "express": "^4.16.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm test"
    }
  }
}
